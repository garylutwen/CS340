{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new passengers, please enter their information below and click 'Submit'!</p>
<form id="add-passenger-form-ajax">
    <label for="name">Name: </label>
    <input type="text" name="name" id="name">
    
    <label for="email"> Email </label>
    <input type="text" name="email" id="email">

    <label for="phone_num">Phone Num: </label>
    <input type="text" name="phone_num" id="phone_num">

    <label for="birth_date">Birth Date </label>
    <input type="date" name="birth_date" id="birth_date">

    <label for="address">Address </label>
    <input type="text" name="address" id="address">

    <input type="submit">
</form>

