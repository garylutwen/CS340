{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new plane, please enter their information below and click 'Submit'!</p>
<form id="add-plane-form-ajax">
    <label for="passenger_id">Passenger ID: </label>
    <input type="text" name="passenger_id" id="passenger_id">
    
    <label for="departure_airport_code"> Departure: </label>
    <input type="text" name="departure_airport_code" id="departure_airport_code">

    <label for="arrival_airport_code"> Arrival: </label>
    <input type="text" name="arrival_airport_code" id="arrival_airport_code">

    <label for="type">Type: </label>
    <input type="text" name="type" id="type">

    <label for="manufactured_year">Manufactured Year: </label>
    <input type="text" name="manufactured_year" id="manufactured_year">

    <label for="range_capacity">Range: </label>
    <input type="text" name="range_capacity" id="range_capacity">

    <label for="passenger_capacity">Passenger Capacity: </label>
    <input type="text" name="passenger_capacity" id="passenger_capacity">

    <label for="meal_served">Meal: </label>
    <input type="text" name="meal_served" id="meal_served">

    <input type="submit">
</form>

